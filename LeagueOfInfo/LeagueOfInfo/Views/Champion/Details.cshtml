@model LeagueOfInfo.Models.Champion

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Champions</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ChampionID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChampionID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PrimaryAttribute)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrimaryAttribute)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            <table class="comments table">
                <tr>
                    <th>User</th>
                    <th>Comment</th>
                </tr>
                @foreach (var item in Model.Comments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuthorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CommentBody)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Add Comment", "../Comment/Create", new { id = Model.ChampionID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
